<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ActionBar.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DialogFragmentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWallAdapterBackground</item>
        <item name="android:padding">@dimen/wall_adapter_padding</item>
    </style>

    <style name="WallAdapterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorWallAdapterBackground</item>
        <item name="android:padding">@dimen/wall_adapter_padding</item>
        <item name="android:layout_margin">@dimen/wall_adapter_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WallItemWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorWallAdapterBackground</item>
        <item name="android:layout_margin">@dimen/wall_adapter_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WallItemContentsWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/wall_adapter_padding</item>
        <item name="android:layout_margin">@dimen/wall_adapter_margin</item>
    </style>

    <style name="WallAdapterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorWallAdapterText</item>
    </style>

    <style name="WallAdapterHeader" parent="WallAdapterText">
        <item name="android:textSize">@dimen/wall_adapter_header_text_size</item>
    </style>

    <style name="WallAdapterInfoText" parent="WallAdapterText">
        <item name="android:textSize">@dimen/wall_adapter_info_text_size</item>
    </style>

    <style name="WallAdapterAuthor" parent="WallAdapterInfoText">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="WallItemSupertagsWrapper">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WallItemSupertag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DetailsDialogLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorWallAdapterBackground</item>
        <item name="android:padding">@dimen/details_dialog_padding</item>
        <item name="android:layout_margin">@dimen/wall_adapter_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DetailsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyAccountEntryLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="MyAccountEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="MyAccountEntry.Text" parent="MyAccountEntry">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
